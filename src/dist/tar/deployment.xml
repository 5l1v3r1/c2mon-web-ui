<?xml version="1.0" encoding="UTF-8"?>
<products>
  <product name="c2mon-web-ui">

    <application name="default">
      <startscript>
        <main-class name="org.springframework.boot.loader.JarLauncher" />
        <property name="c2mon.client.conf.url" value="file:///${INSTALL_DIR}/conf/c2mon-client.properties" />
        <property name="server.port" value="8081" />
        <property name="logging.path" value="${INSTALL_DIR}/log/" />
        <property name="logging.file" value="${INSTALL_DIR}/log/c2mon-web-ui.log" />
      </startscript>
      <deployment>
        <backupPolicy keepBackups="2">
          <preserve type="dir" name="log"/>
        </backupPolicy>
      </deployment>
    </application>


    <application name="c2mon-web-ui-pro" extends="default">
      <startscript name="C2MON-WEB-UI-PRO">
        <property name="c2mon.web.statistics.chartConfigLocation" value="file:///${INSTALL_DIR}/conf/chart-config.xml" />
      </startscript>
      <deployment installLocation="/opt/c2mon-web-ui">
        <directory name="conf">
          <file name="c2mon-client.properties" source="/user/timoper/rep/c2mon/client/c2mon-client.properties" mask="500" />
          <file name="chart-config.xml" source="/user/timoper/rep/c2mon/web/chart-config.xml" mask="500" />
        </directory>
        <notification>
          <mail address="c2mon-admin@cern.ch"/>
        </notification>
      </deployment>
    </application>


    <application name="c2mon-web-ui-test" extends="default">
      <startscript name="C2MON-WEB-UI-TEST"/>
      <deployment installLocation="/opt/c2mon-web-ui-test">
        <directory name="conf">
          <file name="c2mon-client.properties" source="/user/timtest/rep/c2mon/web/c2mon-web.properties" mask="500" />
        </directory>
      </deployment>
    </application>

  </product>
</products>
